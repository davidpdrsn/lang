WHITESPACE = _{ " " | "\n" | "\r" | "\t" }
COMMENT = _{ "/*" ~ (!"*/" ~ ANY)* ~ "*/" }

program = { SOI ~ function+ ~ EOI }

function = {
  "fn"
  ~ identifier
  ~ "(" ~ parameters ~ ")"
  ~ "->" ~ type_
  ~ "{" ~ function_body ~ "}"
}

type_ = { identifier }

function_body = { statement* }

statement = { statement_inner ~ ";" }
statement_inner = _{
  function_call
  | return_statement
}

return_statement = { "return" ~ expression }

parameters = { ((identifier ~ ","?) ~ ","?)* }
arguments = { ((expression ~ ","?) ~ ","?)* }

expression = {
  string
  | function_call
  | identifier
}

function_call = { identifier ~ "(" ~ arguments ~ ")" }

string = ${ "\"" ~ inner ~ "\"" }
inner = @{ char* }
char = {
    !("\"" | "\\") ~ ANY
    | "\\" ~ ("\"" | "\\" | "/" | "b" | "f" | "n" | "r" | "t")
    | "\\" ~ ("u" ~ ASCII_HEX_DIGIT{4})
}

identifier = @{ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_")* }
